<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_bank_statement_line_tree" model="ir.ui.view">
        <field name="name">eazynova.bank.statement.line.tree</field>
        <field name="model">eazynova.bank.statement.line</field>
        <field name="arch" type="xml">
            <tree decoration-success="reconciliation_state == 'reconciled'"
                  decoration-warning="reconciliation_state == 'uncertain'"
                  decoration-danger="reconciliation_state == 'not_reconciled'">
                <field name="date"/>
                <field name="name"/>
                <field name="ref"/>
                <field name="partner_name"/>
                <field name="amount" sum="Total"/>
                <field name="reconciliation_state"/>
                <field name="confidence_score" widget="percentage"/>
                <field name="suggestion_count"/>
            </tree>
        </field>
    </record>

    <record id="view_bank_statement_line_form" model="ir.ui.view">
        <field name="name">eazynova.bank.statement.line.form</field>
        <field name="model">eazynova.bank.statement.line</field>
        <field name="arch" type="xml">
            <form string="Ligne Bancaire">
                <header>
                    <button name="action_find_matching_entries" string="Rechercher Correspondances" type="object"/>
                    <button name="action_validate_reconciliation" string="Valider Rapprochement" type="object"
                            invisible="reconciliation_state != 'uncertain'" class="oe_highlight"/>
                    <button name="action_manual_reconciliation" string="Rapprochement Manuel" type="object"/>
                    <field name="reconciliation_state" widget="statusbar"/>
                </header>
                <sheet>
                    <group>
                        <group>
                            <field name="import_id"/>
                            <field name="date"/>
                            <field name="name"/>
                            <field name="ref"/>
                            <field name="amount"/>
                            <field name="currency_id" invisible="1"/>
                        </group>
                        <group>
                            <field name="partner_name"/>
                            <field name="partner_id"/>
                            <field name="confidence_score" widget="percentage"/>
                            <field name="is_duplicate"/>
                        </group>
                    </group>
                    <group string="Rapprochement">
                        <field name="matching_move_id"/>
                        <field name="matching_move_line_id"/>
                    </group>
                    <notebook>
                        <page string="Suggestions" invisible="suggestion_count == 0">
                            <field name="suggestion_ids">
                                <tree>
                                    <field name="match_type"/>
                                    <field name="confidence_score" widget="percentage"/>
                                    <field name="move_id"/>
                                    <field name="match_reason"/>
                                    <button name="action_apply_suggestion" string="Appliquer" type="object"
                                            class="btn-primary"/>
                                </tree>
                            </field>
                        </page>
                        <page string="DÃ©tails">
                            <group>
                                <field name="account_number"/>
                                <field name="unique_import_id"/>
                                <field name="note"/>
                            </group>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>
</odoo>
