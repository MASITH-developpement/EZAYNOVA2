<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="res_config_settings_view_form" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.eazynova</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="base.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//form" position="inside">
                <div class="app_settings_block" data-string="EAZYNOVA" string="EAZYNOVA" data-key="eazynova">
                    <h2>Configuration EAZYNOVA</h2>

                    <div class="row mt16 o_settings_container">
                        <div class="col-12 col-lg-6 o_setting_box">
                            <div class="o_setting_left_pane">
                                <field name="eazynova_ai_assistance_enabled"/>
                            </div>
                            <div class="o_setting_right_pane">
                                <label for="eazynova_ai_assistance_enabled"/>
                                <div class="text-muted">
                                    Fournisseur d'IA pour l'analyse automatique
                                </div>
                                <div class="content-group" invisible="not eazynova_ai_assistance_enabled">
                                    <div class="row mt16">
                                        <label for="eazynova_ai_provider" class="col-lg-3 o_light_label"/>
                                        <field name="eazynova_ai_provider"/>
                                    </div>
                                    <div class="row">
                                        <label for="eazynova_ai_api_key" class="col-lg-3 o_light_label"/>
                                        <field name="eazynova_ai_api_key" password="True"/>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-12 col-lg-6 o_setting_box">
                            <div class="o_setting_left_pane">
                                <field name="eazynova_ocr_enabled"/>
                            </div>
                            <div class="o_setting_right_pane">
                                <label for="eazynova_ocr_enabled"/>
                                <div class="text-muted">
                                    Activer l'OCR pour l'extraction automatique de documents
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>
</odoo>
