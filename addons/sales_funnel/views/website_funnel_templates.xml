<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <template id="funnel_layout" name="Funnel Layout">
            <t t-call="website.layout">
                <div id="wrap" class="funnel-page">
                    <div class="container mt-5 mb-5">
                        <t t-out="0"/>
                    </div>
                </div>
            </t>
        </template>

        <template id="funnel_list_page" name="Liste des tunnels">
            <t t-call="sales_funnel.funnel_layout">
                <div class="row">
                    <div class="col-12 text-center mb-5">
                        <h1>Nos formulaires</h1>
                    </div>
                </div>
                <div class="row">
                    <t t-foreach="funnels" t-as="funnel">
                        <div class="col-md-6 col-lg-4 mb-4">
                            <div class="card h-100">
                                <div class="card-body">
                                    <h5 class="card-title" t-out="funnel.name"/>
                                    <p class="text-muted" t-out="funnel.funnel_type"/>
                                    <t t-if="funnel.description">
                                        <div t-field="funnel.description"/>
                                    </t>
                                </div>
                                <div class="card-footer">
                                    <a t-attf-href="/funnel/#{funnel.id}" class="btn btn-primary w-100">DÃ©marrer</a>
                                </div>
                            </div>
                        </div>
                    </t>
                </div>
            </t>
        </template>
    </data>
</odoo>
