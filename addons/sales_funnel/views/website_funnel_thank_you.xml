<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <template id="funnel_thank_you_page" name="Page de remerciement">
            <t t-call="sales_funnel.funnel_layout">
                <div class="row">
                    <div class="col-lg-6 mx-auto">
                        <div class="card shadow-sm text-center">
                            <div class="card-body">
                                <div class="mb-4">
                                    <i class="fa fa-check-circle text-success" style="font-size: 4rem;"/>
                                </div>
                                <h2 t-field="funnel.thank_you_title"/>
                                <div t-field="funnel.thank_you_message" class="mt-3"/>
                            </div>
                        </div>
                    </div>
                </div>
            </t>
        </template>
    </data>
</odoo>
