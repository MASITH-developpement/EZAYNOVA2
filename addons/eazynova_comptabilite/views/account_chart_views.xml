<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Plan comptable - Vue liste -->
    <record id="view_account_chart_tree" model="ir.ui.view">
        <field name="name">account.chart.tree</field>
        <field name="model">account.chart</field>
        <field name="arch" type="xml">
            <tree>
                <field name="code"/>
                <field name="name"/>
                <field name="account_type"/>
                <field name="balance"/>
                <field name="reconcile"/>
                <field name="deprecated"/>
            </tree>
        </field>
    </record>

    <!-- Plan comptable - Vue formulaire -->
    <record id="view_account_chart_form" model="ir.ui.view">
        <field name="name">account.chart.form</field>
        <field name="model">account.chart</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="code"/>
                            <field name="name"/>
                            <field name="account_type"/>
                            <field name="company_id" groups="base.group_multi_company"/>
                        </group>
                        <group>
                            <field name="reconcile"/>
                            <field name="deprecated"/>
                            <field name="analytic_required"/>
                            <field name="balance"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Configuration">
                            <group>
                                <field name="group_id"/>
                                <field name="tax_ids" widget="many2many_tags"/>
                                <field name="currency_id"/>
                            </group>
                        </page>
                        <page string="Ã‰critures">
                            <field name="move_line_ids"/>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Action -->
    <record id="action_account_chart" model="ir.actions.act_window">
        <field name="name">Plan comptable</field>
        <field name="res_model">account.chart</field>
        <field name="view_mode">tree,form</field>
    </record>

</odoo>
