<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Écritures - Vue liste -->
    <record id="view_account_move_tree" model="ir.ui.view">
        <field name="name">account.move.tree</field>
        <field name="model">account.move</field>
        <field name="arch" type="xml">
            <tree decoration-info="state=='draft'" decoration-success="state=='posted'">
                <field name="name"/>
                <field name="date"/>
                <field name="journal_id"/>
                <field name="partner_id"/>
                <field name="amount_total"/>
                <field name="state"/>
            </tree>
        </field>
    </record>

    <!-- Écritures - Vue formulaire -->
    <record id="view_account_move_form" model="ir.ui.view">
        <field name="name">account.move.form</field>
        <field name="model">account.move</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="action_post" string="Comptabiliser" type="object" states="draft" class="btn-primary"/>
                    <button name="action_draft" string="Brouillon" type="object" states="posted"/>
                    <field name="state" widget="statusbar"/>
                </header>
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="journal_id"/>
                            <field name="date"/>
                        </group>
                        <group>
                            <field name="partner_id"/>
                            <field name="ref"/>
                            <field name="amount_total"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Lignes d'écriture">
                            <field name="line_ids">
                                <tree editable="bottom">
                                    <field name="account_id"/>
                                    <field name="name"/>
                                    <field name="partner_id"/>
                                    <field name="debit"/>
                                    <field name="credit"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Actions -->
    <record id="action_account_move" model="ir.actions.act_window">
        <field name="name">Écritures comptables</field>
        <field name="res_model">account.move</field>
        <field name="view_mode">tree,form</field>
    </record>

    <record id="action_invoice_customer" model="ir.actions.act_window">
        <field name="name">Factures clients</field>
        <field name="res_model">account.move</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[('move_type', '=', 'out_invoice')]</field>
        <field name="context">{'default_move_type': 'out_invoice'}</field>
    </record>

    <record id="action_invoice_supplier" model="ir.actions.act_window">
        <field name="name">Factures fournisseurs</field>
        <field name="res_model">account.move</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[('move_type', '=', 'in_invoice')]</field>
        <field name="context">{'default_move_type': 'in_invoice'}</field>
    </record>

</odoo>
