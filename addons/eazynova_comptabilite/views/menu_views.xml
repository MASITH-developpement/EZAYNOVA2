    <menuitem id="menu_accounting_config" 
              name="Configuration" 
              parent="menu_accounting_root" 
              sequence="90"
              groups="eazynova_comptabilite.group_accounting_accountant"/>
    
    <menuitem id="menu_accounting_config_chart" 
              name="Plan comptable" 
              parent="menu_accounting_config" 
              action="action_account_chart" 
              sequence="10"/>
    
    <menuitem id="menu_accounting_config_taxes" 
              name="Taxes" 
              parent="menu_accounting_config" 
              action="action_account_tax" 
              sequence="20"/>
    
    <menuitem id="menu_accounting_config_connectors" 
              name="Connecteurs" 
              parent="menu_accounting_config" 
              action="action_accounting_connector" 
              sequence="30"/>

