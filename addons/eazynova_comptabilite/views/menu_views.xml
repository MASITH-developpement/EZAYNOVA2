    <menuitem id="menu_accounting_bank" 
              name="Banque" 
              parent="menu_accounting_root" 
              sequence="30"/>
    
    <menuitem id="menu_accounting_bank_accounts" 
              name="Comptes bancaires" 
              parent="menu_accounting_bank" 
              action="action_bank_account" 
              sequence="10"/>
    
    <menuitem id="menu_accounting_bank_statements" 
              name="Relevés bancaires" 
              parent="menu_accounting_bank" 
              action="action_bank_statement" 
              sequence="20"/>

    <!-- Écritures -->
    <menuitem id="menu_accounting_moves" 
              name="Écritures" 
              parent="menu_accounting_root" 
              sequence="40"/>
    
    <menuitem id="menu_accounting_moves_all" 
              name="Toutes les écritures" 
              parent="menu_accounting_moves" 
              action="action_account_move" 
              sequence="10"/>
    
