    <menuitem id="menu_accounting_partners" 
              name="Tiers" 
              parent="menu_accounting_root" 
              sequence="50"/>
    
    <menuitem id="menu_accounting_customers" 
              name="Clients" 
              parent="menu_accounting_partners" 
              action="action_partner_customer" 
              sequence="10"/>
    
    <menuitem id="menu_accounting_suppliers" 
              name="Fournisseurs" 
              parent="menu_accounting_partners" 
              action="action_partner_supplier" 
              sequence="20"/>

    <!-- Notes de frais -->
    <menuitem id="menu_accounting_expenses" 
              name="Notes de frais" 
              parent="menu_accounting_root" 
              action="action_expense_note" 
              sequence="60"/>

    <!-- Analytique -->
    <menuitem id="menu_accounting_analytic" 
              name="Analytique" 
              parent="menu_accounting_root" 
              sequence="70"
              groups="eazynova_comptabilite.group_accounting_manager"/>
    
    <menuitem id="menu_accounting_analytic_accounts" 
              name="Comptes analytiques" 
              parent="menu_accounting_analytic" 
              action="action_analytic_account" 
              sequence="10"/>

    <!-- Rapports -->
    <menuitem id="menu_accounting_reports" 
              name="Rapports" 
              parent="menu_accounting_root" 
              sequence="80"/>
    
