<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Menu principal -->
    <menuitem id="menu_accounting_root" 
              name="Comptabilité" 
              sequence="10"
              web_icon="eazynova_comptabilite,static/description/icon.png"/>

    <!-- Tableau de bord -->
    <menuitem id="menu_accounting_dashboard" 
              name="Tableau de bord" 
              parent="menu_accounting_root" 
              sequence="1"/>

    <!-- Factures -->
    <menuitem id="menu_accounting_invoices" 
              name="Facturation" 
              parent="menu_accounting_root" 
              sequence="10"/>
    
    <menuitem id="menu_accounting_invoices_customer" 
              name="Factures clients" 
              parent="menu_accounting_invoices" 
              action="action_invoice_customer" 
              sequence="10"/>
    
    <menuitem id="menu_accounting_invoices_supplier" 
              name="Factures fournisseurs" 
              parent="menu_accounting_invoices" 
              action="action_invoice_supplier" 
              sequence="20"/>

    <!-- Paiements -->
    <menuitem id="menu_accounting_payments" 
              name="Paiements" 
              parent="menu_accounting_root" 
              sequence="20"/>
    
    <menuitem id="menu_accounting_payments_in" 
              name="Paiements reçus" 
              parent="menu_accounting_payments" 
              action="action_payment_inbound" 
              sequence="10"/>
    
    <menuitem id="menu_accounting_payments_out" 
              name="Paiements émis" 
              parent="menu_accounting_payments" 
              action="action_payment_outbound" 
              sequence="20"/>

