<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="0">

        <!-- Catégories -->
        <record id="module_category_accounting" model="ir.module.category">
            <field name="name">Comptabilité</field>
            <field name="description">Gestion de la comptabilité</field>
            <field name="sequence">5</field>
        </record>

        <!-- Groupes -->
        <record id="group_accounting_user" model="res.groups">
            <field name="name">Utilisateur Comptabilité</field>
            <field name="category_id" ref="module_category_accounting"/>
            <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
        </record>

        <record id="group_accounting_manager" model="res.groups">
            <field name="name">Gestionnaire Comptabilité</field>
            <field name="category_id" ref="module_category_accounting"/>
            <field name="implied_ids" eval="[(4, ref('group_accounting_user'))]"/>
        </record>

        <record id="group_accounting_accountant" model="res.groups">
            <field name="name">Comptable</field>
            <field name="category_id" ref="module_category_accounting"/>
            <field name="implied_ids" eval="[(4, ref('group_accounting_manager'))]"/>
        </record>

        <!-- Règles d'accès -->

        <!-- Plan comptable -->
        <record id="account_chart_rule_user" model="ir.rule">
            <field name="name">Plan comptable - Utilisateur</field>
            <field name="model_id" ref="model_account_chart"/>
            <field name="domain_force">[('company_id', 'in', company_ids)]</field>
            <field name="groups" eval="[(4, ref('group_accounting_user'))]"/>
        </record>

        <!-- Écritures comptables -->
        <record id="account_move_rule_user" model="ir.rule">
            <field name="name">Écritures - Utilisateur</field>
            <field name="model_id" ref="model_account_move"/>
            <field name="domain_force">[('company_id', 'in', company_ids)]</field>
            <field name="groups" eval="[(4, ref('group_accounting_user'))]"/>
        </record>

        <!-- Comptes bancaires -->
        <record id="bank_account_rule_user" model="ir.rule">
            <field name="name">Comptes bancaires - Utilisateur</field>
            <field name="model_id" ref="model_eazynova_bank_account"/>
            <field name="domain_force">[('company_id', 'in', company_ids)]</field>
            <field name="groups" eval="[(4, ref('group_accounting_user'))]"/>
        </record>

        <!-- Notes de frais -->
        <record id="expense_note_rule_own" model="ir.rule">
            <field name="name">Notes de frais - Propres notes</field>
            <field name="model_id" ref="model_account_expense_note"/>
            <field name="domain_force">[('employee_id.user_id', '=', user.id)]</field>
            <field name="groups" eval="[(4, ref('base.group_user'))]"/>
        </record>

        <record id="expense_note_rule_manager" model="ir.rule">
            <field name="name">Notes de frais - Toutes</field>
            <field name="model_id" ref="model_account_expense_note"/>
            <field name="domain_force">[('company_id', 'in', company_ids)]</field>
            <field name="groups" eval="[(4, ref('group_accounting_manager'))]"/>
        </record>

        <!-- Comptes analytiques -->
        <record id="analytic_account_rule_user" model="ir.rule">
            <field name="name">Comptes analytiques - Utilisateur</field>
            <field name="model_id" ref="model_account_analytic_account"/>
            <field name="domain_force">[('company_id', 'in', company_ids)]</field>
            <field name="groups" eval="[(4, ref('group_accounting_user'))]"/>
        </record>

    </data>
</odoo>
