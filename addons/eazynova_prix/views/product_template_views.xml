<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Extension de la vue formulaire produit -->
    <record id="view_product_template_form_inherit_prix" model="ir.ui.view">
        <field name="name">product.template.form.inherit.prix</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_only_form_view"/>
        <field name="arch" type="xml">
            <!-- Ajouter les boutons -->
            <xpath expr="//div[@name='button_box']" position="inside">
                <button name="action_check_prices"
                        type="object"
                        class="oe_stat_button"
                        icon="fa-line-chart"
                        groups="eazynova_prix.group_prix_user">
                    <div class="o_field_widget o_stat_info">
                        <span class="o_stat_text">Vérifier</span>
                        <span class="o_stat_text">Prix</span>
                    </div>
                </button>

                <button name="action_view_price_checks"
                        type="object"
                        class="oe_stat_button"
                        icon="fa-check-circle"
                        invisible="price_check_count == 0"
                        groups="eazynova_prix.group_prix_user">
                    <field name="price_check_count" widget="statinfo" string="Vérifications"/>
                </button>
            </xpath>

            <!-- Ajouter les champs dans la page Ventes -->
            <xpath expr="//page[@name='sales']/group" position="inside">
                <group string="Vérification des Prix" groups="eazynova_prix.group_prix_user">
                    <field name="enable_price_check" widget="boolean_toggle"/>
                    <field name="price_status" widget="badge" decoration-success="price_status == 'ok'" decoration-warning="price_status == 'warning'" decoration-danger="price_status == 'alert'" decoration-muted="price_status == 'never'"/>
                    <field name="last_price_check"/>
                    <field name="external_avg_price" widget="monetary" options="{'currency_field': 'currency_id'}"/>
                </group>
            </xpath>
        </field>
    </record>

    <!-- Ajout d'une page pour l'historique des vérifications -->
    <record id="view_product_template_form_inherit_prix_page" model="ir.ui.view">
        <field name="name">product.template.form.inherit.prix.page</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_only_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//notebook" position="inside">
                <page string="Vérifications Prix" groups="eazynova_prix.group_prix_user" invisible="price_check_count == 0">
                    <field name="price_check_ids" readonly="1">
                        <tree decoration-success="status == 'ok'" decoration-warning="status == 'warning'" decoration-danger="status == 'alert'">
                            <field name="name"/>
                            <field name="check_date"/>
                            <field name="source_id"/>
                            <field name="current_sale_price" widget="monetary"/>
                            <field name="reference_sale_price" widget="monetary"/>
                            <field name="sale_price_diff" widget="percentage"/>
                            <field name="status" widget="badge"/>
                        </tree>
                    </field>
                </page>
            </xpath>
        </field>
    </record>
</odoo>
