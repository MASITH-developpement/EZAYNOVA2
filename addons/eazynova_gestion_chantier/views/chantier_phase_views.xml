<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Vue Tree -->
    <record id="view_chantier_phase_tree" model="ir.ui.view">
        <field name="name">chantier.phase.tree</field>
        <field name="model">chantier.phase</field>
        <field name="arch" type="xml">
            <tree string="Phases" decoration-info="state=='not_started'" decoration-success="state=='done'">
                <field name="sequence" widget="handle"/>
                <field name="name"/>
                <field name="chantier_id"/>
                <field name="date_debut"/>
                <field name="date_fin"/>
                <field name="progress" widget="progressbar"/>
                <field name="state" widget="badge" decoration-info="state=='not_started'" decoration-success="state=='done'"/>
            </tree>
        </field>
    </record>

    <!-- Vue Form -->
    <record id="view_chantier_phase_form" model="ir.ui.view">
        <field name="name">chantier.phase.form</field>
        <field name="model">chantier.phase</field>
        <field name="arch" type="xml">
            <form string="Phase">
                <header>
                    <field name="state" widget="statusbar" statusbar_visible="not_started,in_progress,done"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <label for="name"/>
                        <h1>
                            <field name="name" placeholder="Nom de la phase"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="chantier_id"/>
                            <field name="sequence"/>
                        </group>
                        <group>
                            <field name="date_debut"/>
                            <field name="date_fin"/>
                            <field name="progress"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Description" name="description">
                            <field name="description"/>
                        </page>
                        <page string="Tâches" name="taches">
                            <field name="tache_ids">
                                <tree editable="bottom">
                                    <field name="name"/>
                                    <field name="user_id" widget="many2one_avatar_user"/>
                                    <field name="date_debut"/>
                                    <field name="date_fin"/>
                                    <field name="duree_estimee"/>
                                    <field name="progress" widget="progressbar"/>
                                    <field name="state" widget="badge"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <!-- Vue Kanban -->
    <record id="view_chantier_phase_kanban" model="ir.ui.view">
        <field name="name">chantier.phase.kanban</field>
        <field name="model">chantier.phase</field>
        <field name="arch" type="xml">
            <kanban class="o_kanban_mobile" default_group_by="state">
                <field name="name"/>
                <field name="chantier_id"/>
                <field name="date_debut"/>
                <field name="date_fin"/>
                <field name="progress"/>
                <field name="state"/>
                <field name="color"/>
                <templates>
                    <t t-name="kanban-box">
                        <div t-attf-class="oe_kanban_color_#{kanban_getcolor(record.color.raw_value)} oe_kanban_card oe_kanban_global_click">
                            <div class="o_kanban_record_top">
                                <div class="o_kanban_record_headings">
                                    <strong class="o_kanban_record_title"><field name="name"/></strong>
                                </div>
                            </div>
                            <div class="o_kanban_record_body">
                                <field name="chantier_id"/>
                                <div>
                                    <field name="date_debut"/> - <field name="date_fin"/>
                                </div>
                                <progressbar t-att-value="record.progress.value" t-att-max="100"/>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- Action -->
    <record id="action_chantier_phase" model="ir.actions.act_window">
        <field name="name">Phases</field>
        <field name="res_model">chantier.phase</field>
        <field name="view_mode">tree,form,kanban</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Créer une nouvelle phase
            </p>
        </field>
    </record>
</odoo>
