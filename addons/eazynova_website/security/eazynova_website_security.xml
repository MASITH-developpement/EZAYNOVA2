<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="0">

        <!-- Catégorie de module -->
        <record id="module_category_saas" model="ir.module.category">
            <field name="name">SaaS EAZYNOVA</field>
            <field name="description">Gestion des abonnements et instances SaaS</field>
            <field name="sequence">20</field>
        </record>

        <!-- Groupe: Utilisateur SaaS -->
        <record id="group_saas_user" model="res.groups">
            <field name="name">Utilisateur</field>
            <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
        </record>

        <!-- Groupe: Manager SaaS -->
        <record id="group_saas_manager" model="res.groups">
            <field name="name">Manager</field>
            <field name="implied_ids" eval="[(4, ref('group_saas_user'))]"/>
        </record>

        <!-- Règles d'enregistrement pour les abonnements -->
        <record id="saas_subscription_user_rule" model="ir.rule">
            <field name="name">Utilisateur SaaS: voir ses propres abonnements</field>
            <field name="model_id" ref="model_saas_subscription"/>
            <field name="domain_force">[('partner_id.user_ids', 'in', [user.id])]</field>
            <field name="groups" eval="[(4, ref('group_saas_user'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="False"/>
            <field name="perm_create" eval="False"/>
            <field name="perm_unlink" eval="False"/>
        </record>

        <record id="saas_subscription_manager_rule" model="ir.rule">
            <field name="name">Manager SaaS: voir tous les abonnements</field>
            <field name="model_id" ref="model_saas_subscription"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="groups" eval="[(4, ref('group_saas_manager'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_unlink" eval="True"/>
        </record>

        <!-- Règles d'enregistrement pour les instances -->
        <record id="saas_instance_user_rule" model="ir.rule">
            <field name="name">Utilisateur SaaS: voir ses propres instances</field>
            <field name="model_id" ref="model_saas_instance"/>
            <field name="domain_force">[('partner_id.user_ids', 'in', [user.id])]</field>
            <field name="groups" eval="[(4, ref('group_saas_user'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="False"/>
            <field name="perm_create" eval="False"/>
            <field name="perm_unlink" eval="False"/>
        </record>

        <record id="saas_instance_manager_rule" model="ir.rule">
            <field name="name">Manager SaaS: voir toutes les instances</field>
            <field name="model_id" ref="model_saas_instance"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="groups" eval="[(4, ref('group_saas_manager'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_unlink" eval="True"/>
        </record>

    </data>
</odoo>
