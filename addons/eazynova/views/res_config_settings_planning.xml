<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_res_config_settings_eazynova_planning" model="ir.ui.view">
        <field name="name">res.config.settings.eazynova.planning</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="eazynova.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@data-key='eazynova']" position="inside">
                <div class="row mt16 o_settings_container">
                    <div class="col-12 col-lg-6 o_setting_box">
                        <div class="o_setting_left_pane"/>
                        <div class="o_setting_right_pane">
                            <label string="Planning global"/>
                            <div class="text-muted">
                                Intervalle de synchronisation du planning
                            </div>
                            <div class="content-group">
                                <div class="row mt16">
                                    <label for="eazynova_planning_sync_interval" class="col-lg-3 o_light_label"/>
                                    <field name="eazynova_planning_sync_interval"/>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>
</odoo>
