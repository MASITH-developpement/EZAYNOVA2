<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_ai_media_library_form" model="ir.ui.view">
        <field name="name">ai.media.library.form</field>
        <field name="model">ai.media.library</field>
        <field name="arch" type="xml">
            <form string="Média IA">
                <header>
                    <button name="action_mark_as_used" type="object" string="Marquer utilisé"/>
                    <button name="action_toggle_favorite" type="object" string="Favori" icon="fa-star"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button class="oe_stat_button" type="object" name="action_toggle_favorite" icon="fa-star">
                            <field name="favorite" widget="boolean"/>
                        </button>
                    </div>
                    <div class="oe_title">
                        <h1><field name="name"/></h1>
                    </div>
                    <group>
                        <group>
                            <field name="media_type"/>
                            <field name="category"/>
                            <field name="tag_ids" widget="many2many_tags"/>
                        </group>
                        <group>
                            <field name="usage_count"/>
                            <field name="last_used_date"/>
                            <field name="file_size" widget="integer"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Contenu">
                            <field name="text_content" invisible="media_type != 'text'"/>
                            <field name="media_file" filename="media_filename" invisible="media_type == 'text'"/>
                            <field name="media_filename" invisible="1"/>
                        </page>
                        <page string="Prompt">
                            <field name="prompt" nolabel="1"/>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_ai_media_library_kanban" model="ir.ui.view">
        <field name="name">ai.media.library.kanban</field>
        <field name="model">ai.media.library</field>
        <field name="arch" type="xml">
            <kanban class="o_kanban_mobile">
                <field name="name"/>
                <field name="media_type"/>
                <field name="favorite"/>
                <templates>
                    <t t-name="card">
                        <div class="oe_kanban_content">
                            <div class="o_kanban_record_title">
                                <field name="name"/>
                                <span class="fa fa-star" t-if="record.favorite.raw_value"/>
                            </div>
                            <div class="o_kanban_record_body">
                                <field name="media_type"/>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <record id="action_ai_media_library" model="ir.actions.act_window">
        <field name="name">Bibliothèque IA</field>
        <field name="res_model">ai.media.library</field>
        <field name="view_mode">kanban,list,form</field>
    </record>
</odoo>
