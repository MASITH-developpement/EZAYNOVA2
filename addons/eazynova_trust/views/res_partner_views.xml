<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Extension vue partenaire -->
    <record id="view_partner_form_inherit_trust" model="ir.ui.view">
        <field name="name">res.partner.form.inherit.trust</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@name='button_box']" position="inside">
                <button name="action_view_reviews" type="object" class="oe_stat_button" icon="fa-star" invisible="review_count == 0">
                    <field name="review_count" widget="statinfo" string="Avis"/>
                </button>
            </xpath>
        </field>
    </record>
</odoo>
