<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Tâche planifiée: Envoi des demandes en attente -->
    <record id="cron_send_pending_requests" model="ir.cron">
        <field name="name">EAZYNOVA: Envoi demandes d'avis en attente</field>
        <field name="model_id" ref="model_eazynova_review_request"/>
        <field name="state">code</field>
        <field name="code">model.cron_send_pending_requests()</field>
        <field name="interval_number">1</field>
        <field name="interval_type">hours</field>
        <field name="active">True</field>
    </record>

    <!-- Tâche planifiée: Relances automatiques -->
    <record id="cron_auto_reminders" model="ir.cron">
        <field name="name">EAZYNOVA: Relances automatiques avis</field>
        <field name="model_id" ref="model_eazynova_review_request"/>
        <field name="state">code</field>
        <field name="code">model.cron_send_auto_reminders()</field>
        <field name="interval_number">1</field>
        <field name="interval_type">days</field>
        <field name="active">True</field>
    </record>

    <!-- Tâche planifiée: Marquage des demandes expirées -->
    <record id="cron_check_expired" model="ir.cron">
        <field name="name">EAZYNOVA: Vérification demandes expirées</field>
        <field name="model_id" ref="model_eazynova_review_request"/>
        <field name="state">code</field>
        <field name="code">model.cron_check_expired_requests()</field>
        <field name="interval_number">1</field>
        <field name="interval_type">days</field>
        <field name="active">True</field>
    </record>
</odoo>
