<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Vue formulaire du wizard de validation client -->
    <record id="view_intervention_validation_wizard_form" model="ir.ui.view">
        <field name="name">intervention.validation.wizard.form</field>
        <field name="model">intervention.validation.wizard</field>
        <field name="arch" type="xml">
            <form string="Validation Client">
                <div class="alert alert-info" role="alert">
                    <strong>Validation de l'intervention</strong><br/>
                    Merci de faire signer le client pour valider les travaux réalisés.
                </div>
                
                <group>
                    <group string="Informations signataire">
                        <field name="intervention_id" readonly="1"/>
                        <field name="nom_signataire" placeholder="Nom et prénom du signataire"/>
                    </group>
                    <group string="Satisfaction">
                        <field name="satisfaction_client" widget="radio"/>
                    </group>
                </group>
                
                <group string="Résumé des travaux">
                    <field name="travaux_realises" placeholder="Décrivez les travaux effectués..." nolabel="1"/>
                </group>
                
                <group string="Observations du client">
                    <field name="observations_client" placeholder="Commentaires ou remarques..." nolabel="1"/>
                </group>
                
                <group string="Signature numérique">
                    <field name="signature_client" widget="signature" 
                           options="{'full_name': 'nom_signataire'}"
                           help="Signature tactile du client"/>
                </group>
                
                <footer>
                    <button string="Valider et terminer" name="action_valider_signature" 
                            type="object" class="btn-primary"/>
                    <button string="Annuler" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <!-- Action pour ouvrir le wizard -->
    <record id="action_intervention_validation_wizard" model="ir.actions.act_window">
        <field name="name">Validation Client</field>
        <field name="res_model">intervention.validation.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
        <field name="view_id" ref="view_intervention_validation_wizard_form"/>
    </record>

</odoo>
