<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_account_move_form_inherit_rexel" model="ir.ui.view">
        <field name="name">account.move.form.inherit.rexel</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@name='button_box']" position="inside">
                <button name="action_view_rexel_import"
                        type="object"
                        class="oe_stat_button"
                        icon="fa-upload"
                        invisible="not is_rexel_invoice"
                        groups="eazynova_rexel.group_rexel_user">
                    <div class="o_field_widget o_stat_info">
                        <span class="o_stat_text">Import</span>
                        <span class="o_stat_text">Rexel</span>
                    </div>
                </button>
            </xpath>
        </field>
    </record>
</odoo>
