<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">

        <!-- Séquence pour les rendez-vous -->
        <record id="seq_booking_appointment" model="ir.sequence">
            <field name="name">Séquence Rendez-vous</field>
            <field name="code">booking.appointment</field>
            <field name="prefix">RDV</field>
            <field name="padding">5</field>
            <field name="number_increment">1</field>
            <field name="number_next">1</field>
        </record>

        <!-- Exemple de type de rendez-vous (optionnel) -->
        <record id="booking_type_demo_consultation" model="booking.type">
            <field name="name">Consultation (30 min)</field>
            <field name="active">False</field>
            <field name="sequence">10</field>
            <field name="description">&lt;p&gt;Consultation rapide pour discuter de votre projet&lt;/p&gt;</field>
            <field name="duration">0.5</field>
            <field name="location_type">video</field>
            <field name="location">En ligne (lien envoyé par email)</field>
            <field name="min_schedule_hours">24</field>
            <field name="max_schedule_days">30</field>
            <field name="ask_phone">1</field>
            <field name="ask_email">1</field>
            <field name="ask_company">1</field>
            <field name="ask_message">1</field>
            <field name="allow_reschedule">1</field>
            <field name="allow_cancel">1</field>
            <field name="cancel_hours">24</field>
            <field name="send_confirmation">1</field>
            <field name="send_reminder">1</field>
            <field name="reminder_hours">24</field>
        </record>

    </data>
</odoo>
