<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="view_booking_reschedule_wizard_form" model="ir.ui.view">
            <field name="name">booking.reschedule.wizard.form</field>
            <field name="model">booking.reschedule.wizard</field>
            <field name="arch" type="xml">
                <form string="Reprogrammer le rendez-vous">
                    <group>
                        <field name="appointment_id" invisible="1"/>
                        <field name="old_datetime" readonly="1"/>
                        <field name="new_datetime"/>
                        <field name="user_id"/>
                    </group>
                    <footer>
                        <button string="Reprogrammer" type="object" name="action_reschedule" class="btn-primary"/>
                        <button string="Annuler" class="btn-secondary" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

        <record id="action_booking_reschedule_wizard" model="ir.actions.act_window">
            <field name="name">Reprogrammer le rendez-vous</field>
            <field name="res_model">booking.reschedule.wizard</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
            <field name="binding_model_id" ref="model_booking_appointment"/>
            <field name="binding_view_types">form</field>
        </record>

    </data>
</odoo>
