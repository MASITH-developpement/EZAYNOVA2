<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <!-- Vue liste -->
        <record id="view_booking_availability_tree" model="ir.ui.view">
            <field name="name">booking.availability.tree</field>
            <field name="model">booking.availability</field>
            <field name="arch" type="xml">
                <list string="Disponibilités" editable="bottom">
                    <field name="user_id"/>
                    <field name="weekday"/>
                    <field name="hour_from" widget="float_time"/>
                    <field name="hour_to" widget="float_time"/>
                    <field name="active" widget="boolean_toggle"/>
                </list>
            </field>
        </record>

        <!-- Vue formulaire -->
        <record id="view_booking_availability_form" model="ir.ui.view">
            <field name="name">booking.availability.form</field>
            <field name="model">booking.availability</field>
            <field name="arch" type="xml">
                <form string="Disponibilité">
                    <sheet>
                        <group>
                            <group>
                                <field name="user_id"/>
                                <field name="weekday"/>
                                <field name="active"/>
                            </group>
                            <group>
                                <field name="hour_from" widget="float_time"/>
                                <field name="hour_to" widget="float_time"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Action -->
        <record id="action_booking_availability" model="ir.actions.act_window">
            <field name="name">Disponibilités</field>
            <field name="res_model">booking.availability</field>
            <field name="view_mode">list,form</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Configurez vos disponibilités
                </p>
                <p>
                    Définissez les créneaux horaires pendant lesquels vous êtes disponible pour recevoir des rendez-vous.
                </p>
            </field>
        </record>

    </data>
</odoo>
