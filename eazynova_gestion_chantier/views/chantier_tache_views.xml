<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Vue Tree -->
    <record id="view_chantier_tache_tree" model="ir.ui.view">
        <field name="name">chantier.tache.tree</field>
        <field name="model">chantier.tache</field>
        <field name="arch" type="xml">
            <tree string="Tâches" decoration-info="state=='todo'" decoration-success="state=='done'" decoration-muted="state=='cancel'">
                <field name="name"/>
                <field name="phase_id"/>
                <field name="chantier_id"/>
                <field name="user_id" widget="many2one_avatar_user"/>
                <field name="date_debut"/>
                <field name="date_fin"/>
                <field name="duree_estimee"/>
                <field name="duree_reelle"/>
                <field name="progress" widget="progressbar"/>
                <field name="priority" widget="priority"/>
                <field name="state" widget="badge" decoration-info="state=='todo'" decoration-success="state=='done'"/>
            </tree>
        </field>
    </record>

    <!-- Vue Form -->
    <record id="view_chantier_tache_form" model="ir.ui.view">
        <field name="name">chantier.tache.form</field>
        <field name="model">chantier.tache</field>
        <field name="arch" type="xml">
            <form string="Tâche">
                <header>
                    <field name="state" widget="statusbar" statusbar_visible="todo,in_progress,done"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <label for="name"/>
                        <h1>
                            <field name="name" placeholder="Nom de la tâche"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="chantier_id"/>
                            <field name="phase_id" domain="[('chantier_id', '=', chantier_id)]"/>
                            <field name="user_id" widget="many2one_avatar_user"/>
                            <field name="priority" widget="priority"/>
                        </group>
                        <group>
                            <field name="date_debut"/>
                            <field name="date_fin"/>
                            <field name="duree_estimee"/>
                            <field name="duree_reelle"/>
                            <field name="progress"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Description" name="description">
                            <field name="description"/>
                        </page>
                        <page string="Notes" name="notes">
                            <field name="note"/>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <!-- Vue Kanban -->
    <record id="view_chantier_tache_kanban" model="ir.ui.view">
        <field name="name">chantier.tache.kanban</field>
        <field name="model">chantier.tache</field>
        <field name="arch" type="xml">
            <kanban class="o_kanban_mobile" default_group_by="state">
                <field name="name"/>
                <field name="phase_id"/>
                <field name="user_id"/>
                <field name="date_debut"/>
                <field name="date_fin"/>
                <field name="progress"/>
                <field name="priority"/>
                <field name="state"/>
                <field name="color"/>
                <templates>
                    <t t-name="kanban-box">
                        <div t-attf-class="oe_kanban_color_#{kanban_getcolor(record.color.raw_value)} oe_kanban_card oe_kanban_global_click">
                            <div class="o_kanban_record_top">
                                <div class="o_kanban_record_headings">
                                    <strong class="o_kanban_record_title"><field name="name"/></strong>
                                </div>
                                <field name="priority" widget="priority"/>
                            </div>
                            <div class="o_kanban_record_body">
                                <field name="phase_id"/>
                                <div>
                                    <field name="date_debut"/> - <field name="date_fin"/>
                                </div>
                                <progressbar t-att-value="record.progress.value" t-att-max="100"/>
                            </div>
                            <div class="o_kanban_record_bottom">
                                <div class="oe_kanban_bottom_right">
                                    <field name="user_id" widget="many2one_avatar_user"/>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- Action -->
    <record id="action_chantier_tache" model="ir.actions.act_window">
        <field name="name">Tâches</field>
        <field name="res_model">chantier.tache</field>
        <field name="view_mode">tree,form,kanban</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Créer une nouvelle tâche
            </p>
        </field>
    </record>
</odoo>
