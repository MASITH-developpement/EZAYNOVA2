<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <data>
    <template id="technician_photos_avant_template" name="Photos Avant Intervention">
      <t t-call="website.layout">
        <div class="container" style="max-width:600px; margin:auto;">
          <h2 class="text-center mt-4 mb-4">Photos avant intervention</h2>
          <form t-attf-action="/intervention/technicien/photos_avant/{{ intervention_id }}" method="post" enctype="multipart/form-data">
            <div class="mb-3">
              <label for="photo1" class="form-label">Photo 1 (obligatoire)</label>
              <input type="file" class="form-control" id="photo1" name="photo1" accept="image/*" required="required"/>
            </div>
            <div class="mb-3">
              <label for="photo2" class="form-label">Photo 2 (obligatoire)</label>
              <input type="file" class="form-control" id="photo2" name="photo2" accept="image/*" required="required"/>
            </div>
            <t t-if="error">
              <div class="alert alert-danger text-center">Veuillez s√©lectionner 2 photos obligatoires.</div>
            </t>
            <button type="submit" class="btn btn-success w-100">Enregistrer les photos</button>
          </form>
        </div>
      </t>
    </template>
  </data>
</odoo>
