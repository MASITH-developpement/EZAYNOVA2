<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Déclaration du modèle pour les actions serveur -->
    <record id="model_intervention_intervention" model="ir.model">
        <field name="model">intervention.intervention</field>
        <field name="name">Intervention</field>
    </record>
        <!-- Action principale pour toutes les interventions -->
        <record id="action_intervention" model="ir.actions.act_window">
            <field name="name">Interventions</field>
            <field name="res_model">intervention.intervention</field>
            <field name="view_mode">list,form</field>
            <field name="view_ids" eval="[(5,0,0),
                (0,0,{ 'view_mode': 'list', 'view_id': ref('eazynova_intervention.intervention_intervention_view_list') }),
                (0,0,{ 'view_mode': 'form', 'view_id': ref('eazynova_intervention.view_intervention_form') })
            ]"/>
            <field name="search_view_id" ref="intervention_intervention_view_search"/>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Créez votre première intervention !
                </p>
                <p>
                    Gérez vos interventions de plomberie et électricité :<br/>
                    • Planification des techniciens<br/>
                    • Suivi des matériaux<br/>
                    • Facturation automatique
                </p>
            </field>
        </record>
</odoo>
