<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Vue wizard conflits -->
    <record id="view_planning_conflict_wizard_form" model="ir.ui.view">
        <field name="name">eazynova.planning.conflict.wizard.form</field>
        <field name="model">eazynova.planning.conflict.wizard</field>
        <field name="arch" type="xml">
            <form string="Gestion des conflits de planning">
                <field name="message" widget="html" readonly="1"/>

                <group>
                    <field name="conflict_count" readonly="1"/>
                    <field name="resolution_action"/>
                </group>

                <field name="conflict_line_ids">
                    <tree>
                        <field name="conflict_type"/>
                        <field name="resource_id"/>
                        <field name="description"/>
                    </tree>
                </field>

                <footer>
                    <button string="RÃ©soudre" name="action_resolve_conflicts" type="object" class="btn-primary"/>
                    <button string="Annuler" special="cancel" class="btn-secondary"/>
                </footer>
            </form>
        </field>
    </record>

</odoo>
