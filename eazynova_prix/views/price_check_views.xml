<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Vue arbre des vérifications de prix -->
    <record id="view_price_check_tree" model="ir.ui.view">
        <field name="name">eazynova.price.check.tree</field>
        <field name="model">eazynova.price.check</field>
        <field name="arch" type="xml">
            <tree string="Vérifications de Prix" decoration-success="status == 'ok'" decoration-warning="status == 'warning'" decoration-danger="status == 'alert'">
                <field name="name"/>
                <field name="check_date"/>
                <field name="product_id"/>
                <field name="source_id"/>
                <field name="current_sale_price" widget="monetary"/>
                <field name="reference_sale_price" widget="monetary"/>
                <field name="sale_price_diff" widget="percentage"/>
                <field name="current_cost_price" widget="monetary"/>
                <field name="reference_cost_price" widget="monetary"/>
                <field name="cost_price_diff" widget="percentage"/>
                <field name="status" widget="badge" decoration-success="status == 'ok'" decoration-warning="status == 'warning'" decoration-danger="status == 'alert'"/>
                <field name="alert_level" optional="hide"/>
                <field name="user_id"/>
            </tree>
        </field>
    </record>

    <!-- Vue formulaire des vérifications -->
    <record id="view_price_check_form" model="ir.ui.view">
        <field name="name">eazynova.price.check.form</field>
        <field name="model">eazynova.price.check</field>
        <field name="arch" type="xml">
            <form string="Vérification de Prix">
                <header>
                    <button name="action_apply_reference_prices"
                            string="Appliquer les Prix de Référence"
                            type="object"
                            class="oe_highlight"
                            invisible="status == 'ok'"/>
                    <button name="action_view_product"
                            string="Voir le Produit"
                            type="object"
                            class="btn-secondary"/>
                    <field name="status" widget="statusbar" statusbar_visible="ok,warning,alert"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <label for="name"/>
                        <h1>
                            <field name="name" readonly="1"/>
                        </h1>
                    </div>

                    <group>
                        <group>
                            <field name="check_date"/>
                            <field name="product_id"/>
                            <field name="source_id"/>
                            <field name="user_id"/>
                        </group>
                        <group>
                            <field name="alert_level" widget="badge" decoration-muted="alert_level == 'none'" decoration-info="alert_level == 'low'" decoration-warning="alert_level == 'medium'" decoration-danger="alert_level == 'high'"/>
                        </group>
                    </group>

                    <group string="Prix de Vente">
                        <group>
                            <label for="current_sale_price" string="Prix Actuel"/>
                            <div class="o_row">
                                <field name="current_sale_price" widget="monetary"/>
                                <span invisible="sale_price_diff == 0" class="text-success" style="margin-left: 10px;" attrs="{'invisible': [('sale_price_diff', '&gt;=', 0)]}">
                                    ▼ <field name="sale_price_diff" widget="percentage"/>
                                </span>
                                <span invisible="sale_price_diff == 0" class="text-danger" style="margin-left: 10px;" attrs="{'invisible': [('sale_price_diff', '&lt;', 0)]}">
                                    ▲ <field name="sale_price_diff" widget="percentage"/>
                                </span>
                            </div>
                        </group>
                        <group>
                            <field name="reference_sale_price" widget="monetary"/>
                        </group>
                    </group>

                    <group string="Prix de Revient">
                        <group>
                            <label for="current_cost_price" string="Prix Actuel"/>
                            <div class="o_row">
                                <field name="current_cost_price" widget="monetary"/>
                                <span invisible="cost_price_diff == 0" class="text-success" style="margin-left: 10px;" attrs="{'invisible': [('cost_price_diff', '&gt;=', 0)]}">
                                    ▼ <field name="cost_price_diff" widget="percentage"/>
                                </span>
                                <span invisible="cost_price_diff == 0" class="text-danger" style="margin-left: 10px;" attrs="{'invisible': [('cost_price_diff', '&lt;', 0)]}">
                                    ▲ <field name="cost_price_diff" widget="percentage"/>
                                </span>
                            </div>
                        </group>
                        <group>
                            <field name="reference_cost_price" widget="monetary"/>
                        </group>
                    </group>

                    <group string="Notes">
                        <field name="notes" nolabel="1" placeholder="Notes sur cette vérification..."/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Vue recherche -->
    <record id="view_price_check_search" model="ir.ui.view">
        <field name="name">eazynova.price.check.search</field>
        <field name="model">eazynova.price.check</field>
        <field name="arch" type="xml">
            <search string="Rechercher Vérifications">
                <field name="name"/>
                <field name="product_id"/>
                <field name="source_id"/>
                <field name="user_id"/>

                <filter name="filter_alert" string="Alertes" domain="[('status', '=', 'alert')]"/>
                <filter name="filter_warning" string="Avertissements" domain="[('status', '=', 'warning')]"/>
                <filter name="filter_ok" string="OK" domain="[('status', '=', 'ok')]"/>

                <separator/>

                <filter name="filter_today" string="Aujourd'hui" domain="[('check_date', '&gt;=', datetime.datetime.now().strftime('%Y-%m-%d'))]"/>
                <filter name="filter_week" string="Cette Semaine" domain="[('check_date', '&gt;=', (datetime.datetime.now() - datetime.timedelta(days=7)).strftime('%Y-%m-%d'))]"/>

                <group expand="0" string="Grouper par">
                    <filter name="group_product" string="Article" context="{'group_by': 'product_id'}"/>
                    <filter name="group_source" string="Source" context="{'group_by': 'source_id'}"/>
                    <filter name="group_status" string="Statut" context="{'group_by': 'status'}"/>
                    <filter name="group_date" string="Date" context="{'group_by': 'check_date'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Action -->
    <record id="action_price_check" model="ir.actions.act_window">
        <field name="name">Vérifications de Prix</field>
        <field name="res_model">eazynova.price.check</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{'search_default_filter_week': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Aucune vérification de prix enregistrée
            </p>
            <p>
                Lancez une vérification de prix depuis un produit ou utilisez l'assistant de vérification.
            </p>
        </field>
    </record>
</odoo>
