<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Vue arbre des sources de prix -->
    <record id="view_price_source_tree" model="ir.ui.view">
        <field name="name">eazynova.price.source.tree</field>
        <field name="model">eazynova.price.source</field>
        <field name="arch" type="xml">
            <tree string="Sources de Prix">
                <field name="sequence" widget="handle"/>
                <field name="name"/>
                <field name="source_type"/>
                <field name="check_count"/>
                <field name="last_sync"/>
                <field name="active" widget="boolean_toggle"/>
            </tree>
        </field>
    </record>

    <!-- Vue formulaire des sources de prix -->
    <record id="view_price_source_form" model="ir.ui.view">
        <field name="name">eazynova.price.source.form</field>
        <field name="model">eazynova.price.source</field>
        <field name="arch" type="xml">
            <form string="Source de Prix">
                <header>
                    <button name="action_sync_prices"
                            string="Synchroniser"
                            type="object"
                            class="oe_highlight"
                            invisible="source_type == 'manual'"/>
                    <button name="action_view_checks"
                            string="Voir les Vérifications"
                            type="object"
                            class="btn-secondary"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="action_view_checks"
                                type="object"
                                class="oe_stat_button"
                                icon="fa-check-circle">
                            <field name="check_count" widget="statinfo" string="Vérifications"/>
                        </button>
                    </div>

                    <widget name="web_ribbon" title="Archivé" bg_color="text-bg-danger" invisible="active"/>

                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="Nom de la source..."/>
                        </h1>
                    </div>

                    <group>
                        <group>
                            <field name="sequence"/>
                            <field name="source_type"/>
                            <field name="active" widget="boolean_toggle"/>
                        </group>
                        <group>
                            <field name="margin_warning"/>
                            <field name="last_sync" readonly="1"/>
                        </group>
                    </group>

                    <notebook>
                        <page string="Configuration API" invisible="source_type != 'api'">
                            <group>
                                <field name="api_url" placeholder="https://api.example.com/prices"/>
                                <field name="api_key" password="True"/>
                            </group>
                        </page>

                        <page string="Notes">
                            <field name="notes" placeholder="Notes et informations sur cette source..."/>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Action -->
    <record id="action_price_source" model="ir.actions.act_window">
        <field name="name">Sources de Prix</field>
        <field name="res_model">eazynova.price.source</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Créer votre première source de prix
            </p>
            <p>
                Les sources de prix permettent de comparer vos tarifs avec des bases de données externes
                comme Batiprix ou d'autres API de tarification.
            </p>
        </field>
    </record>
</odoo>
