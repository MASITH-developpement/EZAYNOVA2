<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Groupe Utilisateur Prix -->
    <record id="group_prix_user" model="res.groups">
        <field name="name">Utilisateur Vérification Prix</field>
        <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
    </record>

    <!-- Groupe Manager Prix -->
    <record id="group_prix_manager" model="res.groups">
        <field name="name">Manager Vérification Prix</field>
        <field name="implied_ids" eval="[(4, ref('group_prix_user'))]"/>
    </record>

    <!-- Règles d'accès aux enregistrements -->
    <record id="price_check_user_rule" model="ir.rule">
        <field name="name">Vérifications Prix: Utilisateur</field>
        <field name="model_id" ref="model_eazynova_price_check"/>
        <field name="domain_force">[(1, '=', 1)]</field>
        <field name="groups" eval="[(4, ref('group_prix_user'))]"/>
    </record>

    <record id="price_source_user_rule" model="ir.rule">
        <field name="name">Sources Prix: Utilisateur</field>
        <field name="model_id" ref="model_eazynova_price_source"/>
        <field name="domain_force">[('active', '=', True)]</field>
        <field name="groups" eval="[(4, ref('group_prix_user'))]"/>
    </record>

    <record id="price_source_manager_rule" model="ir.rule">
        <field name="name">Sources Prix: Manager</field>
        <field name="model_id" ref="model_eazynova_price_source"/>
        <field name="domain_force">[(1, '=', 1)]</field>
        <field name="groups" eval="[(4, ref('group_prix_manager'))]"/>
    </record>
</odoo>
