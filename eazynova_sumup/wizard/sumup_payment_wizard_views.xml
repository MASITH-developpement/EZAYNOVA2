<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_sumup_payment_wizard_form" model="ir.ui.view">
        <field name="name">eazynova.sumup.payment.wizard.form</field>
        <field name="model">eazynova.sumup.payment.wizard</field>
        <field name="arch" type="xml">
            <form string="Paiement SumUp">
                <sheet>
                    <div class="oe_title">
                        <h1>Paiement par Carte (SumUp)</h1>
                    </div>

                    <group>
                        <group>
                            <field name="invoice_id" readonly="1"/>
                            <field name="partner_id" readonly="1"/>
                        </group>
                        <group>
                            <field name="amount" widget="monetary"/>
                            <field name="currency_id" invisible="1"/>
                            <field name="description"/>
                        </group>
                    </group>

                    <div class="alert alert-info" role="alert">
                        <p><strong>Instructions:</strong></p>
                        <ol>
                            <li>Vérifiez le montant</li>
                            <li>Préparez votre terminal SumUp</li>
                            <li>Cliquez sur "Payer" pour lancer la transaction</li>
                            <li>Suivez les instructions sur le terminal</li>
                        </ol>
                    </div>
                </sheet>

                <footer>
                    <button name="action_process_payment"
                            string="Payer"
                            type="object"
                            class="btn-primary"/>
                    <button string="Annuler"
                            class="btn-secondary"
                            special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>
