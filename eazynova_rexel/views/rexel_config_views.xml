<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_rexel_config_form" model="ir.ui.view">
        <field name="name">eazynova.rexel.config.form</field>
        <field name="model">eazynova.rexel.config</field>
        <field name="arch" type="xml">
            <form string="Configuration Rexel">
                <sheet>
                    <h1><field name="name"/></h1>
                    <group>
                        <group>
                            <field name="partner_id"/>
                            <field name="email_domain"/>
                            <field name="default_journal_id"/>
                        </group>
                        <group>
                            <field name="auto_create_draft"/>
                            <field name="auto_match_po"/>
                            <field name="use_ocr"/>
                            <field name="use_ai_validation"/>
                        </group>
                    </group>
                    <group>
                        <field name="notification_user_ids" widget="many2many_tags"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_rexel_config" model="ir.actions.act_window">
        <field name="name">Configuration Rexel</field>
        <field name="res_model">eazynova.rexel.config</field>
        <field name="view_mode">form</field>
    </record>
</odoo>
