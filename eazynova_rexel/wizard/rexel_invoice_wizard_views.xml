<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_rexel_invoice_wizard_form" model="ir.ui.view">
        <field name="name">eazynova.rexel.invoice.wizard.form</field>
        <field name="model">eazynova.rexel.invoice.wizard</field>
        <field name="arch" type="xml">
            <form string="Importer Facture Rexel">
                <sheet>
                    <div class="oe_title">
                        <h1>Import Manuel Facture Rexel</h1>
                    </div>

                    <group>
                        <field name="file_data" filename="file_name"/>
                        <field name="file_name" invisible="1"/>
                        <field name="file_type"/>
                        <field name="auto_process"/>
                    </group>

                    <div class="alert alert-info" role="alert">
                        <p><strong>Formats support√©s:</strong></p>
                        <ul>
                            <li>PDF (avec OCR automatique)</li>
                            <li>XML (Factur-X, UBL)</li>
                        </ul>
                    </div>
                </sheet>

                <footer>
                    <button name="action_import_invoice"
                            string="Importer"
                            type="object"
                            class="btn-primary"/>
                    <button string="Annuler"
                            class="btn-secondary"
                            special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <!-- Action pour lancer le wizard depuis le menu -->
    <record id="action_rexel_invoice_wizard" model="ir.actions.act_window">
        <field name="name">Importer Facture Rexel</field>
        <field name="res_model">eazynova.rexel.invoice.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

    <!-- Menu pour lancer l'import manuel -->
    <menuitem id="menu_rexel_import_wizard"
              name="Importer Facture"
              parent="menu_rexel_root"
              action="action_rexel_invoice_wizard"
              sequence="5"/>
</odoo>
