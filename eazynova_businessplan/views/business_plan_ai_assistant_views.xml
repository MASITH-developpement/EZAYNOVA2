                                       widget="text" style="white-space: pre-wrap; font-family: monospace;"/>
                            </group>
                        </page>

                        <page string="üí° Suggestions" name="suggestions">
                            <group>
                                <div class="alert alert-success" role="alert">
                                    <strong>Suggestions d'am√©lioration</strong>
                                </div>
                                <field name="suggestions" nolabel="1" readonly="1"
                                       widget="text" style="white-space: pre-wrap;"/>
                            </group>
                        </page>

                        <page string="‚ö†Ô∏è Probl√®mes" name="issues">
                            <group>
                                <div class="alert alert-warning" role="alert">
                                    <strong>Probl√®mes d√©tect√©s</strong>
                                </div>
                                <field name="issues" nolabel="1" readonly="1"
                                       widget="text" style="white-space: pre-wrap;"/>
                            </group>
                        </page>
                    </notebook>
                </sheet>
                <footer>
                    <button string="Fermer" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

</odoo>
