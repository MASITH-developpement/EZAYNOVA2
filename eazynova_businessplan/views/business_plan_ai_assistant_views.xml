        <field name="model">business.plan.ai.assistant</field>
        <field name="arch" type="xml">
            <form string="Assistant IA">
                <sheet>
                    <div class="oe_title">
                        <h1>ü§ñ Assistant IA pour Business Plan</h1>
                    </div>

                    <group>
                        <field name="business_plan_id" readonly="1"/>
                        <field name="analysis_type" readonly="1"/>
                        <field name="score" widget="progressbar"/>
                    </group>

                    <notebook>
                        <page string="üìä Analyse" name="result">
                            <group>
                                <div class="alert alert-info" role="alert">
                                    <strong>R√©sultat de l'analyse IA</strong>
                                </div>
