<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Rapport PDF pour Banques -->
    <record id="action_report_businessplan_bank" model="ir.actions.report">
        <field name="name">Business Plan - Dossier Banque</field>
        <field name="model">business.plan</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">eazynova_businessplan.report_businessplan_bank</field>
        <field name="report_file">eazynova_businessplan.report_businessplan_bank</field>
        <field name="binding_model_id" ref="model_business_plan"/>
        <field name="binding_type">report</field>
        <field name="print_report_name">'BP_Banque_%s' % object.reference</field>
    </record>

