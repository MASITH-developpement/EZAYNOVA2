<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Tâche planifiée : Remplissage automatique des indicateurs mensuels -->
    <record id="ir_cron_auto_fill_monthly_indicators" model="ir.cron">
        <field name="name">Business Plan: Actualiser Indicateurs Mensuels</field>
        <field name="model_id" ref="model_business_plan_monthly_indicator"/>
        <field name="state">code</field>
        <field name="code">model.cron_auto_fill_indicators()</field>
        <field name="interval_number">1</field>
        <field name="interval_type">days</field>
        <field name="active" eval="True"/>
        <field name="priority">10</field>
    </record>
</odoo>
